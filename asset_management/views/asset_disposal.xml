<odoo>

    <record id="view_asset_form_inherited" model="ir.ui.view">
            <field name="name">view.asset.form.inherited</field>
            <field name="model">account.asset.asset</field>
            <field name="inherit_id" ref="om_account_asset.view_account_asset_asset_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/header/button[@name='set_to_close']" position="replace" >
                   <button name="set_to_close" string="Sell or Dispose" type="object" class="oe_highlight" attrs="{'invisible': True}"/>
                </xpath>
                <xpath expr="//field[@name='date']" position="attributes">
                   <attribute name="string">Purchase Date</attribute>
                </xpath>
                <xpath expr="//field[@name='value_residual']" position="attributes">
                   <attribute name="string">Accumulated Depreciation</attribute>
                </xpath>
                <xpath expr="//field[@name='depreciation_line_ids']/tree/field[@name='remaining_value']" position="attributes">
                   <attribute name="string">Net-Book Value</attribute>
                </xpath>
                <xpath expr="//field[@name='analytic_tag_ids']" position="attributes">
                    <attribute name="invisible">True</attribute>
                </xpath>
                <xpath expr="//field[@name='account_analytic_id']" position="attributes">
                   <attribute name="invisible">True</attribute>
                </xpath>
                <xpath expr="//field[@name='category_id']" position="after" >
                   <field name="asset_origin" string="Asset Origin"/>
                   <field name="account_id" attrs="{'invisible': True, 'required': [('asset_origin', 'in', ('donated'))]}"/>
                   <field name="journal_id" attrs="{'invisible': [('asset_origin', 'in', ['procured','pre_existing'])], 'required': [('asset_origin', 'in', ('donated'))]}"/>
                </xpath>
                <xpath expr="//notebook" position="before" >
                   <group>
                       <field name="department_id"/>
                   </group>
                </xpath>
            </field>
    </record>

    <record id="asset_disposal_tree_view" model="ir.ui.view">
      <field name="name">asset.disposal.tree.view</field>
      <field name="model">account.asset.disposal</field>
      <field name="arch" type="xml">
          <tree string="Asset Disposal">
               <field name="date_created"/>
               <field name="name"/>
               <field name="state"/>
              <field name="total_disposal_amount"/>
          </tree>
      </field>
    </record>

    <record id="asset_disposal_search_view" model="ir.ui.view">
        <field name="name">asset.disposal.search.view</field>
        <field name="model">account.asset.disposal</field>
        <field name="arch" type="xml">
            <search string="asset disposal search">
                <field name="state" string="state" filter_domain="[('state','ilike',self)]"/>
                <field name="name" string="name" filter_domain="[('name','ilike',self)]"/>
            </search>
        </field>
    </record>

   <record id="asset_disposal_form_view" model="ir.ui.view">
        <field name="name">asset.disposal.form.view</field>
        <field name="model">account.asset.disposal</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="button_fm_approve" states="draft" string="FM Approve" type="object" class="oe_highlight"
                            groups="asset_management.asset_fm"/>
                    <button name="button_reject" states="fm_approved,asset_evaluation,asset_evaluated,md_approved" string="Reject" type="object"
                            groups="asset_management.asset_fm,asset_management.asset_md"/>
                    <button name="button_evaluate" states="asset_evaluation" string="Evaluate Assets" type="object"
                            groups="asset_management.asset_hod,asset_management.asset_fm,asset_management.asset_md"/>
                     <button name="button_md_approve" states="asset_evaluated" string="MD Approve" type="object"
                            groups="asset_management.asset_md"/>
                    <button name="button_dispose" states="md_approved" string="Complete Asset Evaluation" type="object"
                            groups="asset_management.asset_fm,asset_management.asset_md"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,fm_approved,asset_evaluation,asset_evaluated,md_approved,asset_disposed"/>
                </header>
                <sheet>
                    <group string="Reference No">
                        <field name="name"/>
                    </group>
                    <group string="Disposal Details">
                        <group>
                            <field name="account_id"/>
                        </group>
                        <group>
                            <field name="total_disposal_amount"/>
                        </group>
                    </group>
                    <group>
                        <field name="evaluation_report" filename="evaluation_report_file_name"/>
                        <field name="evaluation_report_file_name" invisible="1"/>
                    </group>
                    <notebook>
                        <page string="Assets To Dispose">
                            <field name="line_ids" attrs="{'readonly': [('state', 'in', ('asset_disposed','md_approved'))]}">
                                <tree editable="bottom">
                                    <field name="check_evaluation" invisible="1" />
                                    <field name="asset_id" />
                                    <field name="disposal_type" />
                                    <field name="account_id" />
                                    <field name="journal_id" />
                                    <field name="original_disposal_amount" />
                                    <field name="evaluated_disposal_amount" attrs="{'invisible': [('check_evaluation', '=', False)]}"/>
                                    <field name="partner_id" attrs="{'invisible': [('check_evaluation', '=', False)]}"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_asset_disposal" model="ir.actions.act_window">
        <field name="name">Asset Disposal</field>
        <field name="res_model">account.asset.disposal</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
              Ready to create a asset disposal?
          </p><p>
              Let's create a asset disposal.
          </p>
        </field>
    </record>

      <menuitem
        parent="asset_management.menu_root"
        id="menu_asset_disposal"
        action="action_asset_disposal"
        sequence="5"
        groups="asset_management.asset_hod,asset_management.asset_fm,asset_management.asset_md"/>
</odoo>
